<div class='col12 clearfix pad0y'>
  <div>
    <span class='code space-right'><%= name %></span>
    <% if (prop.type && prop.type !== '*') { %><a href='#<%= prop.type %>' class='space-right small'><%= prop.type %></a><% } %>
    <% if (prop.values) { %><span class='space-right quiet small'>
      <em>Options:</em> <strong><% _(prop.values).each(function(opt) { %><%= opt %> <% }) %></strong>
    </span><% } %>
    <% if (prop.default) { %><span class='space-right quiet small'>
      <em>Default:</em> <%= prop.default %>
    </span><% } %>
    <% if (prop.required) { %><span class='icon alert inline quiet'></span><% } %>
    <% if (prop.function) { %><span class='icon levels inline quiet'></span><% } %>
    <% if (prop.transition) { %><span class='icon opacity inline quiet'></span><% } %>
  </div>
  <% if (prop.doc) { %><p class='small pad2x'><%= prop.doc %></p><% } %>
</div>